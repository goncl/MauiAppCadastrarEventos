<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppCadastrarEventos.Views.CadastrarEventos"
             Title="CadastrarEventos"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Cadastro de Eventos"
                   HorizontalOptions="Center"
                   FontSize="30" />


            <Frame>
                <VerticalStackLayout>
                    <Label Text="Selecione o seu Evento" />

                    <Picker x:Name="pck_nome_evento" 
                            Title="Escolha o evento" />
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="10" >
                <VerticalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Data de Início" />
                        <DatePicker x:Name="dtpck_Inicio"
                                    Format="dd/MM/yyyy" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Data de Término" />
                        <DatePicker x:Name="dtpck_Termino"
                                     Format="dd/MM/yyyy" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>
            <Frame>
                <HorizontalStackLayout>
                    <Grid RowDefinitions="Auto"
                          ColumnDefinitions="*, *, 2*">
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Número de Participantes: " 
                               HorizontalOptions="Center" 
                               Margin="0,5,5,0"/>

                        <Label Grid.Row="0" Grid.Column="1"
                               HorizontalOptions="Center"
                               Text="{Binding Value}" 
                               BindingContext="{x:Reference stp_participantes}"
                               Margin="10,5,10,0" />

                        <Stepper Grid.Row="0" Grid.Column="2"
                                 x:Name="stp_participantes"
                                 Minimum="5"
                                 Maximum="100"
                                 Increment="5"
                                 HorizontalOptions="Center" 
                                 Margin="10,0,0,0" />

                    </Grid>
                </HorizontalStackLayout>
            </Frame>

            <Frame>
                <VerticalStackLayout>
                    <Label Text="Local do Evento" />

                    <Picker x:Name="pck_local_evento" 
                            Title="Escolha o Local evento" />
                </VerticalStackLayout>
            </Frame>

            <Frame>
                <VerticalStackLayout>
                    <Label Text="Custo por Participante R$ " />
                    <Entry x:Name="custoParticipanteEntry"
                           Keyboard="Numeric"
                           Placeholder="Ex: 20,00" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Cadastrar Evento"
                        x:Name="btnCadastrar"
                        BackgroundColor="#007BFF"
                        Clicked="BtnCadastrar_Clicked"
                        TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>